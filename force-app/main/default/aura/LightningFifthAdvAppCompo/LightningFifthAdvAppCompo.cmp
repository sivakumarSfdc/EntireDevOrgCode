<aura:component controller ="DiceJobForumApexClass" implements="force:appHostable,flexipage:availableForAllPageTypes,flexipage:availableForRecordHome,force:hasRecordId,forceCommunity:availableForAllPageTypes,force:lightningQuickAction"
                access="global" >
    
    <aura:attribute name="attDiceObjRec" type="Dice_Job_Form__c" default="{'sobjectType':'Dice_Job_Form__c',
                                                                          'First_Name__c':'',
                                                                          'Preferred_Country__c':'',
                                                                          'Experience__c':''}" />
    
     <div class="slds-page-header">
        <div class="slds-media__body">
            <h1 class="slds-page-header__title slds-truncate slds-align-middle">Welcome to the DiceJob Forumn Application</h1>
            <p class="slds-text-body__small slds-line-height__reset">Please Fill below All Fields</p>
        </div>
    </div>
    
    <div class="container-fluid">
        <h3>Enter Applicant Details</h3>
        <div class="form-group">
            <label>First Name : </label>
            <ui:inputText class="form-control" value="{!v.attDiceObjRec.First_Name__c}" />
        </div>
        <div class="form-group">
            <label>Prefered Country : </label>
            <ui:inputText class="form-control" value ="{!v.attDiceObjRec.Preferred_Country__c}" />
        </div>
        <div class="form-group">
            <label>Experience : </label>
            <ui:inputText class="form-control" value ="{!v.attDiceObjRec.Experience__c}" />
        </div>
        <div class="col-md-4 text-center">
            <ui:button class="btn btn-default" press="{!c.callClientSideController}">Create</ui:button>
        </div>

    </div>

    
    
    
	
</aura:component>