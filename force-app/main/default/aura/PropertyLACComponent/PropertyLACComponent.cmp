<aura:component controller = "PropertyApexClass" implements="force:appHostable,flexipage:availableForAllPageTypes,flexipage:availableForRecordHome,force:hasRecordId,forceCommunity:availableForAllPageTypes,force:lightningQuickAction" 
                access="global" >
    
    <aura:attribute name ="attPropertyObj" type ="Property__c" default = "{'sobjectType':'Property__c',
                                                                            'Price__c':'',
                                                                            'Type__c':''
                                                                          }" />
    <aura:attribute name ="attListOfRecords" type ="List" />
    <aura:attribute name="attRefreshClick" type ="Boolean" default ="false" />
    
    <article class="slds-card">
        <div class="slds-card__header slds-grid">
            <header class="slds-media slds-media_center slds-has-flexi-truncate">
                <div class="slds-media__figure">
                    <span class="slds-icon_container slds-icon-standard-buyer_account" title="buyer_account" >
                        <lightning:icon iconName="standard:buyer_account" size="small" alternativeText="propertyIcon" />
                    </span>
                </div>
                <div class="slds-media__body">
                    <h2 class="slds-card__header-title">
                        <a  class="slds-card__header-link slds-truncate" title="buyer_accounts">
                            <span>Building Property</span>
                        </a>
                    </h2>
                </div>
            </header>
        </div>
    </article>
    <div class = "slds-size--4-of-8">
        <div class="slds-grid slds-p-top_medium">
            <div class="slds-size_5-of-12 slds-p-left_xx-large slds-p-horizontal_x-large " >
                <lightning:input label ="Price" type ="number" value="{!v.attPropertyObj.Price__c}" maxlength ="16"/>
            </div>
            <div class="slds-size_5-of-12 slds-p-left_xx-large slds-p-horizontal_x-large " >
                <lightning:select name ="homeType" label="Select Label" aura:id="hometype">
                    <option value="">Selectâ€¦</option>
                    <option value="Villa">Villa</option>
                    <option value="Row House">Row House</option>
                    <option value="Apartment">Appartment</option>
                </lightning:select>
            </div>
            <div class="slds-size_5-of-12 slds-p-left_xx-large slds-p-top_large slds-p-horizontal_x-large " >
                <lightning:button variant="success" label="Save" onclick ="{!c.insertProperty}" />
                <lightning:button variant="destructive" label="Refresh" onclick ="{!c.displayRecords}" />
            </div>
        </div>
        <br></br>
        <aura:if isTrue ="{!v.attRefreshClick}">
            <c:PropertyLACHandlerComponent attChildCompo ="{!v.attListOfRecords}" />
        </aura:if>
                
    </div>

    

</aura:component>