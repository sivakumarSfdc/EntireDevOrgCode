<apex:page standardController="Account">
    <apex:form >
        <apex:pageBlock title="Page Block">
            <apex:pageBlockButtons >
                <apex:commandButton action="{!save}" value="Save Me"/>
            </apex:pageBlockButtons>
            
            <apex:pageBlockSection title="First Page Block Section" columns="3">
                <apex:inputField value="{!Account.Name}" required="True"/>
                <apex:inputField value="{!Account.AccountSource}" />
                <apex:inputField value="{!Account.Website}" />
                <apex:inputField value="{!Account.Industry}" />
                 <apex:inputField value="{!Account.NaicsCode}" />
            </apex:pageBlockSection>
        </apex:pageBlock>
    </apex:form>
</apex:page>